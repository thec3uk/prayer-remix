{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Netlify Dev (Remix App)",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "netlify",
                "dev"
            ],
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}